<%= form_for @place, html: { multipart: true } do |f| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group" >
    <p><strong> <%= f.label :kind %> </strong></p>
    <%= f.text_field :kind,  class: "form-control", placeholder: "House, Apartment, or Condo?" %></br>
  
    <p><strong> <%= f.label :address %> </strong></p>
    <%= f.text_field :address,  class: "form-control", placeholder: "What street do you live on?" %></br>
  
    <p><strong> <%= f.label :state %> </strong></p>
    <%= f.text_field :state,  class: "form-control", placeholder: "State?" %></br>
  
    <p><strong> <%= f.label :description %> </strong></p>
    <%= f.text_area :description,  class: "form-group", placeholder: "Give some details about your place" %></br>

    <p><strong> <%= f.label :availability %> </strong></p>
    <%= f.text_field :availability,  class: "form-group", placeholder: "When do you want to rent it out?" %></br>
 
    <p> <%= f.label :price %> </p>
    <%= f.text_field :price,  class: "input-small", placeholder: "What is the nightly rent?" %>
  </div></br>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
 


<% end %>
