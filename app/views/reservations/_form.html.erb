

<%= form_for @reservation, url: reservations_path, method: :post, :html => { :multipart => true } do |f| %>

  <%= f.hidden_field :place_id, :value => @place.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
    <%= f.date_field('check_in', :start => Time.now ) %>
  </div>
  <div class='form-group'>
    <%= f.date_field('check_out', default: 3.days.from_now ) %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>